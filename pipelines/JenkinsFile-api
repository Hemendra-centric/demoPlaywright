pipeline {
    agent any

    environment {
        // Windows paths - adjust to your Jenkins configuration
        JAVA_HOME = 'C:\\Program Files\\Java\\jdk-17'
        PATH = "${JAVA_HOME}\\bin;${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo '========== Checking out source code =========='
                checkout scm
                bat 'git log --oneline -5'
            }
        }

        stage('Build') {
            steps {
                echo '========== Building the project =========='
                bat 'mvn clean compile -DskipTests -q'
            }
        }

        stage('Run API Tests') {
            steps {
                echo '========== Running API Tests =========='
                bat '''
                mvn clean test ^
                  -Dgroups=api
                '''
            }
        }

        stage('Publish Reports') {
            steps {
                echo '========== Publishing API Test Reports =========='
                // Publish XML results
                junit allowEmptyResults: true, testResults: 'target/surefire-reports/*.xml'

                // Publish Cucumber HTML reports
                publishHTML([
                    allowMissing: true,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'target/cucumber-reports',
                    reportFiles: 'cucumber-report.html',
                    reportName: 'API Test Report'
                ])
            }
        }
    }

    post {
        always {
            echo '========== Archiving Artifacts =========='
            archiveArtifacts artifacts: 'target/test-artifacts/**', allowEmptyArchive: true
        }

        success {
            echo '✓ API Tests Passed!'
        }

        failure {
            echo '✗ API Tests Failed - Check reports above'
        }
    }
}
