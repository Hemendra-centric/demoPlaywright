pipeline {
    agent any

    tools {
        jdk 'java-17'
        maven 'maven'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Playwright Browsers') {
            steps {
                sh '''
                  mvn exec:java \
                  -Dexec.mainClass=com.microsoft.playwright.CLI \
                  -Dexec.args="install"
                '''
            }
        }

        stage('Run UI Tests') {
            steps {
                sh 'mvn clean test -Dgroups=ui -Dbrowser=chromium || true'
            }
        }
    }

    post {
        always {
            junit 'target/surefire-reports/*.xml'

            publishHTML([
                reportDir: 'target/cucumber-reports',
                reportFiles: 'cucumber-report.html',
                reportName: 'UI Test Report',
                keepAll: true,
                alwaysLinkToLastBuild: true
            ])

            archiveArtifacts artifacts: 'target/test-artifacts/**', allowEmptyArchive: true
            cleanWs()
        }
    }
}
